---

import { SignedOut, SignInButton, UserButton } from "@clerk/astro/components";

---

<header class="flex v-center">
    <a href="/">
        <img src="/assets/banner.png" alt="WebX+ Logo">
    </a>
    <h1>WebX+ Domains</h1>
    <div class="push-right" id="navAccount">
        <UserButton>
            <UserButton.MenuItems>
                <UserButton.Link href="/domains" label="My Domains">
                    <svg slot="label-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 6h9.75M10.5 6a1.5 1.5 0 1 1-3 0m3 0a1.5 1.5 0 1 0-3 0M3.75 6H7.5m3 12h9.75m-9.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-3.75 0H7.5m9-6h3.75m-3.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-9.75 0h9.75" />
                      </svg>
                    </UserButton.Link>
            </UserButton.MenuItems>
        </UserButton>
        <SignedOut>
            <SignInButton class="login-button">Login</SignInButton>
        </SignedOut>
    </div>
</header>


<style>
    header {
        border-bottom: 1px solid var(--wxp-clr-dark-400);
        margin-bottom: 50px;
        padding: 15px;
        position: relative;
        height: 50px;
    }
    header img {
        display: block;
        height: 30px;
    }
    header h1 {
        position: absolute;
        inset: 50% auto auto 50%;
        translate: -50% calc(-50% - 10px);
        color: var(--wxp-clr-text-100);
    }

    .login-button {
        color: var(--wxp-clr-primary-400);
        cursor: pointer;
    }
    .login-button:is(:hover, :focus-visible) {
        color: var(--wxp-clr-primary-200);
    }

    header #navAccount .login-button + #navAccountDropdown {
        display: none;
    }

    @media (width < 750px) {
        h1 {
            display: none;
        }
    }
</style>